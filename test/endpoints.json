{
    "baseUrl": "http://localhost:8000",
    "endpoints": [
        {
            "method": "GET",
            "path": "/admin/logs",
            "description": "Get admin logs",
            "expectedOutput": {
                "type": "Logs array or HTML"
            }
        },
        {
            "method": "GET",
            "path": "/admin/download-abgaben",
            "description": "Download abgaben as ZIP",
            "expectedOutput": {
                "type": "application/zip"
            }
        },
        {
            "method": "POST",
            "path": "/admin/wipe-abgaben",
            "description": "Wipe abgaben directory",
            "expectedOutput": {
                "type": "HTML page"
            }
        },

        {
            "method": "GET",
            "path": "/ldap?email=graf",
            "description": "Search LDAP by email prefix",
            "expectedOutput": {
                "type": "HTML with user list"
            }
        },
        {
            "method": "POST",
            "path": "/activeips",
            "description": "Register active IPs",
            "data": {
                "ips": ["10.10.10.10", "7.7.7.7", "8.8.1.1"]
            }
        },
        {
            "method": "GET",
            "path": "/unterlagen",
            "description": "Serve unterlagen directory",
            "expectedOutput": {
                "type": "Directory listing or static files"
            }
        },
        {
            "method": "GET",
            "path": "/admin",
            "description": "Serve admin page",
            "expectedOutput": {
                "type": "HTML page"
            }
        },
        {
            "method": "GET",
            "path": "/",
            "description": "Home page with directory index",
            "expectedOutput": {
                "type": "HTML page"
            }
        }
