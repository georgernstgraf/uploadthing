{{> top}}
<div class="leisure-card mx-auto text-center p-3" style="max-width: 600px;">
    <div class="mb-2">
        <div class="d-inline-flex align-items-center justify-content-center rounded-circle" 
             style="width: 50px; height: 50px; background: var(--leisure-accent-chill); color: var(--leisure-success-text, #198754);">
            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-check-lg" viewBox="0 0 16 16">
                <path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
            </svg>
        </div>
    </div>
    
    <h2 class="mb-3 fw-bold" style="color: var(--leisure-primary); font-size: 1.4rem;">Abgabe Erfolgreich!</h2>
    
    <div class="text-start p-3 rounded-4" style="background: rgba(255,255,255,0.5);">
        <div class="row g-2">
            <div class="col-12 pb-2 border-bottom border-light">
                <span class="d-block text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.05em;">Dateiname</span>
                <span class="fw-bold text-break" style="font-size: 0.95rem;">{{filename}}</span>
            </div>
            
            <div class="col-md-6 pb-1">
                <span class="d-block text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.05em;">Größe</span>
                <span style="font-size: 0.9rem;">{{filesize}} Bytes</span>
            </div>
            
            <div class="col-md-6 pb-1">
                <span class="d-block text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.05em;">Dauer</span>
                <span style="font-size: 0.9rem;">{{durationSeconds}} Sekunden</span>
            </div>
            
            <div class="col-md-6 pb-1">
                <span class="d-block text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.05em;">IP</span>
                <span style="font-size: 0.9rem;">{{remote_ip}}</span>
            </div>
            
            <div class="col-12 pt-2 border-top border-light">
                <span class="d-block text-muted text-uppercase fw-bold" style="font-size: 0.65rem; letter-spacing: 0.05em;">MD5-Summe</span>
                <span class="font-monospace text-break" style="font-size: 0.75rem;">{{md5sum}}</span>
            </div>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="/" class="btn btn-primary px-4 py-2">Zurück zur Startseite</a>
    </div>
</div>
</main>
</body>

</html>