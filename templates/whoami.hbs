{{> top}}
<div class="leisure-card mx-auto" style="max-width: 600px;">
    <h2 class="my-3 text-center mb-4">Anmelden / Name Ã¤ndern</h2>
    {{#if remote_user}}
    <div class="alert alert-info mb-3">
        Bereits angemeldet als: <strong>{{remote_user.email}}</strong>
    </div>
    {{/if}}
    <!-- 1. Das Suchfeld -->
    <div class="mb-4">
        <label class="w-100 fw-bold mb-2">Suche nach Email</label>
        <div class="position-relative">
            <input type="text"
                   class="form-control form-control-lg ps-5"
                   id="email-search"
                   name="email"
                   placeholder="Anfangsbuchstaben meiner Email..."
                   hx-get="/ldap"
                   autofocus
                   hx-trigger="keyup changed delay:500ms"
                   hx-target="#options-select"
                   hx-on:keydown="if(event.key==='Enter'){event.preventDefault();document.getElementById('submit-btn').click()}">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                ğŸ”
            </span>
        </div>
    </div>
    <!-- 2. Die Select-Box -->
    <div class="mb-3">
        <label class="w-100 fw-bold mb-2">Auswahl</label>
        <select id="options-select"
                class="form-select form-select-lg mt-1 border-0 shadow-inner"
                style="background-color: rgba(255,255,255,0.5);"
                name="email"
                size="10"
                hx-post="/register"
                hx-trigger="change"
                hx-target="body"
                hx-push-url="true"
                hx-swap="innerHTML">
            <!-- Initialer Inhalt oder leer -->
            <option value=""
                    selected
                    class="p-2 text-muted fst-italic">Bitte oben suchen...</option>
        </select>
    </div>
    <div class="d-grid">
        <button id="submit-btn"
                class="btn btn-primary btn-lg"
                hx-post="/register"
                hx-include="#email-search"
                hx-target="body"
                hx-push-url="true"
                hx-swap="innerHTML">
            Anmelden
        </button>
    </div>
</div>
</main>
</body>

</html>