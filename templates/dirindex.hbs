<section class="mx-3 d-flex flex-wrap justify-content-center gap-4">
    <div class="leisure-card flex-fill"
         style="max-width: 500px;">
        <h2 class="text-center mb-4"><span class="border-bottom border-3 border-danger pb-2">Angabe und Unterlagen</span></h2>
        <ul class="list-unstyled text-center d-flex flex-column gap-3">
            {{#each files}}
                <li>
                    <a href="../unterlagen/{{this}}"
                       class="btn btn-outline-light text-dark w-100 py-2 text-truncate shadow-sm fw-bold hover-scale">
                        {{this}}
                    </a>
                </li>
            {{/each}}
        </ul>
    </div>
    <div class="leisure-card flex-fill"
         style="max-width: 500px;">
        <h2 class="text-center mb-4"><span class="border-bottom border-3 border-danger pb-2">Dokumentation online</span></h2>
        <div class="d-flex flex-wrap gap-2 justify-content-center">
            <a href="https://getbootstrap.com/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-bootstrap.svg"
                     alt=""
                     class="doc-pill-icon">Bootstrap </a>
            <a href="https://learn.microsoft.com/en-us/dotnet/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-dotnet.ico"
                     alt=""
                     class="doc-pill-icon">C# / .NET </a>
            <a href="https://css-tricks.com/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-css-tricks.svg"
                     alt=""
                     class="doc-pill-icon">CSS Tricks </a>
            <a href="https://fakerjs.dev/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-faker.svg"
                     alt=""
                     class="doc-pill-icon">Faker JS </a>
            <a href="https://docs.oracle.com/en/java/javase/21/docs/api/index.html"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-java.svg"
                     alt=""
                     class="doc-pill-icon">Javadoc </a>
            <a href="https://developer.mozilla.org/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-mdn.svg"
                     alt=""
                     class="doc-pill-icon">Mozilla Developer Network </a>
            <a href="https://www.prisma.io/docs/orm"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-prisma.svg"
                     alt=""
                     class="doc-pill-icon">Prisma </a>
            <a href="https://www.w3schools.com/"
               class="btn btn-sm btn-light shadow-sm doc-pill"
               target="_blank"
               rel="noopener noreferrer">
                <img src="/static/img/doc-w3schools.svg"
                     alt=""
                     class="doc-pill-icon">W3Schools </a>
        </div>
    </div>
</section>
